<mapper namespace="com.demo.dao.UserDao">
<!--    登录-->
    <select id="testLogin" resultType="com.demo.domain.User">
        select * from user where name=#{name} and password=#{password}
    </select>

<!--    注册-->
    <insert id="testRegist" parameterType="com.demo.domain.User" >
        INSERT INTO ssm.user (name, password) VALUES (#{name},#{password} )
